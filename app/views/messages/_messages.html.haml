- @messages.each do |message|
  .message
    .message__name
      = message.user.name
    .message__date
      = message.updated_at.strftime("%Y/%m/%d %H:%M")
    - if message.content.present?
      .message__text
        = message.content
    .message__image
      = image_tag message.image.url if message.image.present?