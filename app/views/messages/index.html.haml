.side-bar
  .user
    .user__name test-user
    %li.user__link
      %i.fa.fa-edit
      %i.fa.fa-cog
  .group-list
    = render partial: "group"

.chat-main
  .main-header
    .main-header__group-name test-group
    .main-header__menber Menber : test-user
    .main-header__edit-button Edit
  .chat-main__chat-list
    = render partial: "chat"
  .chat-main__form-box
    .form
      .form__text-area type a message
      .form__image
        %form{:method => "post"}
        %label
          %i.fa.fa-image
          %input#send-image{:name => "file", :style => "display:none", :type => "file"}
    .form-button
      .form-button__send Send
